<% include partials/header %>

<% let months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>

<h2>YOUR FORECAST FOR</h2>

<h2> <%= weatherData.city.name.toUpperCase() %> </h2>

<div class="resultCards">


<% for (i = 0; i < weatherData.list.length; i +=8 ) { %>
  <% let forecastDay = weatherData.list[i].dt_txt.substring(8,10) %>
  <% let forecastMonth = months[Number(weatherData.list[i].dt_txt.substring(5,7)-1)]; %>


  <div class="card1">
    <span id="date"> <%= forecastMonth + " " + forecastDay %> </span>

    <div class="img">
      <img class="cities" src=<%= "http://openweathermap.org/img/w/" + weatherData.list[i].weather[0].icon + ".png" %> alt="Weather Icon">
    </div>

    <div class="temp"><%= Math.round(weatherData.list[i].main.temp) %></div>
    <div class="celc">
      <img src="images/celc1.png" alt="Celcius">
    </div>

    <div class="description">
      <span><%= weatherData.list[i].weather[0].description.toUpperCase(); %></span>
    </div>

    <div class="humidity">
      <span>Humidity</span>
      <span><%= weatherData.list[i].main.humidity %> % </span>
    </div>

    <div class="pressure" >
      <span>Pressure</span>
      <span><%= weatherData.list[i].main.pressure %> hPa </span>
    </div>

    <div class="speed">
      <span>Wind</span>
      <span><%= weatherData.list[i].wind.speed %> meter/sec </span>
    </div>

  </div>

<% } %>
</div>

<br>
<a href="/" id="back">Back</a>
<% include partials/footer %>
